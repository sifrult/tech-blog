<div id="blogpost-container">
  <h2>{{title}}</h2>
  <p id="blogpost-content">{{content}}</p>
  <div id="blogpost-user-date">
    <p>{{user.username}}</p>
    <p>{{format_date date_created}}</p>
  </div>
</div>

{{#equals user_id session_id}}
<div id="delete-update-btns">
  <button class="deleteBtn" id="delete-btn">Delete</button>
  <button id="update" class="update-btn">Edit</button>
</div>
{{/equals}}

{{#each comments}}
<div id="comment-container">
  <p>{{comment_text}}</p>
  <div id="comment-user-date">
    <p>{{user.username}}, {{format_date date_created}}</p>
  </div>
</div>
{{/each}}

{{#if logged_in}}
<div id="add-comment">
  <p>Add a comment:</p>
  <form class="comment-form">
      <textarea id="comment"></textarea><br>
      <button type="submit" id="comment-submit">Submit</button>
  </form>
</div>
{{/if}}

<script src="/js/blogpost.js"></script>
<script src="/js/delete.js"></script>
<script>
  document.querySelector("#update").addEventListener("click", function() {
    window.location.href = `/blogpost/editPost/{{id}}`;
  });
</script>
