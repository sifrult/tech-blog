<div id="blogpost-container">
  <h2>{{title}}</h2>
  <p id="blogpost-content">{{content}}</p>
  <div id="blogpost-user-date">
    <p>{{user.username}}</p>
    <p>{{format_date date_created}}</p>
  </div>
</div>

{{#equals user_id session_id}}
<button class="deleteBtn">Delete</button>
<br>
<button id="update">Update</button>
{{/equals}}

<br>
{{#each comments}}
<div id="comment-container">
  <p>{{comment_text}}</p>
  <div id="comment-user-date">
    <p>{{user.username}}, {{format_date date_created}}</p>
  </div>
</div>
{{/each}}

{{#if logged_in}}
<br>
Add a comment:
<form class="comment-form">
    <textarea id="comment"></textarea>
    <button type="submit">Post</button>
</form>
{{/if}}

<script src="/js/blogpost.js"></script>
<script src="/js/delete.js"></script>
<script>
  document.querySelector("#update").addEventListener("click", function() {
    window.location.href = `/blogpost/editPost/{{id}}`;
  });
</script>
